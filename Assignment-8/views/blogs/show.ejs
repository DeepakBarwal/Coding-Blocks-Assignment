<%-include('../partials/header')%> <%-include('../partials/navbar')%>

<div class="container mb-3">
  <%- include('../partials/flash')%>
  <div class="row">
    <div class="col-md-12 mt-3">
      <div class="card" style="width: 100%">
        <img src="<%=blog.img%>" class="card-img-top" alt="..." />
        <div class="card-body">
          <h5 class="card-title"><%=blog.title%></h5>
          <footer class="mt-1 p-1 blockquote-footer">
            Author: <cite title="Source Title"><%=blog.author%></cite>
          </footer>
          <p class="card-text"><%=blog.text%></p>
          <a href="/blogs/<%=blog._id%>/edit" class="btn btn-warning"
            >Edit Blog Post</a
          >
          <div class="mt-3">
            <form action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
              <button class="btn btn-danger">Delete Blog Post</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container comment-div">
  <div class="row">
    <div class="col-lg-6">
      <h1>Leave a Comment</h1>

      <form
        action="/blogs/<%=blog._id%>/comment"
        method="POST"
        class="isValidated"
        novalidate
      >
        <!-- <div class="mb-3" style="max-width: 28vw">
          <label for="username" class="form-label">Username</label>
          <input
            type="text"
            class="form-control"
            id="username"
            name="username"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div> -->

        <div class="mb-3">
          <label for="comment" class="form-label">Comment</label><br />
          <textarea
            id="comment"
            class="form-label"
            cols="36"
            rows="3"
            name="comment"
            required
          ></textarea>
          <div class="valid-feedback">Looks good!</div>
        </div>
        <button type="submit" class="btn btn-success">Submit</button>
      </form>

      <div class="mb-3 mt-3">
        <% for(let comment of blog.comments){ %>
        <div class="card text-white bg-dark mb-3 comments">
          <div class="card-header text-capitalize">
            <strong><%=comment.user%></strong>
          </div>
          <div class="card-body">
            <!-- <h5 class="card-title">Username: <%=comment.user%></h5> -->
            <p class="card-text"><%=comment.comment%></p>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%-include('../partials/footer')%>
